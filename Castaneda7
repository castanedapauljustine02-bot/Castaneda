public class Castaneda7
{
   public static void main(String [] Args) {
         int[] numbers = {3, -7, 10, -2, -15, 8};

        for (int i = 0; i < numbers.length; i++) {
            if (numbers[i] < 0) {
                numbers[i] = -numbers[i];  // convert to positive
            }
        }

        // Print the updated array
        for (int n : numbers) {
            System.out.print(n + " ");
        }
    }
}
