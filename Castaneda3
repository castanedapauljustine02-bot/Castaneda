public class Castaneda3
{
   public static void main(String [] Args) {
        for (int i = 1; i <= 5; i++) {        // controls the number of lines
            for (int j = 1; j <= i; j++) {    // prints stars on each line
                System.out.print("*");
            }
            System.out.println();             // move to next line
        }
    }
}    
